{
	"name": "@kumardeo/file-size",
	"version": "0.0.1",
	"private": false,
	"description": "Utilities for calculating file size",
	"license": "MIT",
	"repository": "kumardeo/kumardeo-npm",
	"bugs": "https://github.com/kumardeo/kumardeo-npm/issues",
	"homepage": "https://github.com/kumardeo/kumardeo-npm/tree/main/packages/file-size",
	"scripts": {
		"lint": "cross-env DEBUG=eslint:cli-engine eslint --fix --ignore-path ../../.eslintignore .",
		"format": "prettier --write --ignore-path ../../.prettierignore .",
		"build": "npm run clean && tsc",
		"clean": "rimraf dist"
	},
	"files": [
		"dist"
	],
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"file-size": "./dist/cli.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/index.d.ts"
			]
		}
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"duplexer3": "^1.0.0",
		"get-stdin": "^9.0.0",
		"meow": "^13.2.0",
		"pretty-bytes": "^6.1.1"
	},
	"devDependencies": {
		"@types/duplexer3": "^0.1.4"
	}
}
