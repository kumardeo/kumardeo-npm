{
	"compilerOptions": {
		"target": "ES2021",
		"module": "CommonJS",
		"lib": ["ES2022"],
		"moduleResolution": "Node",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"baseUrl": ".",
		"outDir": "dist",
		"types": ["node", "duplexer3"]
	},
	"include": ["src", "declarations.d.ts"],
	"exclude": ["node_modules"]
}
